---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import { SITE_CONFIG } from '../config/domain.js';
---

<Layout 
  title="Download Jenny Mod for MCPE/Bedrock Edition - Latest Version"
  description="Download Jenny Mod for Minecraft Pocket Edition (MCPE) and Bedrock Edition. Get the latest version 1.21.71 with full compatibility and features."
  keywords="Jenny Mod MCPE, Minecraft Pocket Edition, Bedrock Edition, Download, 1.21.71"
>
  <Header />
  
  <main class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Hero Section -->
    <section class="py-20">
      <div class="container mx-auto px-4 max-w-4xl text-center">
        <div class="space-y-6">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-green-400/20 to-blue-500/20 border border-green-400/30 backdrop-blur-sm">
            <span class="text-sm font-medium text-green-400">MCPE/Bedrock Edition</span>
          </div>
          
          <h1 class="text-4xl md:text-6xl font-black leading-tight">
            <span class="bg-gradient-to-r from-green-400 via-blue-500 to-purple-500 bg-clip-text text-transparent">
              Jenny Mod for MCPE
            </span>
          </h1>
          
          <p class="text-xl text-base-content/80 leading-relaxed max-w-2xl mx-auto">
            Download the latest version of Jenny Mod optimized for Minecraft Pocket Edition and Bedrock platforms.
          </p>
        </div>
      </div>
    </section>

    <!-- Download Section -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-2xl">
        <Card variant="feature" class="text-center space-y-8">
          <!-- Jenny Mod Icon -->
          <div class="flex justify-center">
            <img 
              src="/icon/cropped-Jenny-Mod-300x300.webp" 
              alt="Jenny Mod MCPE" 
              class="w-24 h-24 rounded-full shadow-glow-primary animate-float"
            />
          </div>
          
          <!-- Download Info -->
          <div class="space-y-4">
            <h2 class="text-2xl font-bold text-primary">Jenny Mod MCPE</h2>
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center">
                <div class="text-2xl font-bold text-green-400">1.21.71</div>
                <div class="text-sm text-base-content/60">Version</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-400">6.93 MB</div>
                <div class="text-sm text-base-content/60">File Size</div>
              </div>
            </div>
          </div>
          
          <!-- Features -->
          <div class="space-y-4 text-left">
            <h3 class="text-lg font-semibold text-center">What's Included:</h3>
            <ul class="space-y-2 text-base-content/80">
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Compatible with MCPE 1.17.0 - 1.21.71</span>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Optimized for mobile devices</span>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>All Jenny Mod features included</span>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Easy installation process</span>
              </li>
            </ul>
          </div>
          
          <!-- Download Button -->
          <div class="space-y-4">
            <Button
              href="#"
              variant="primary"
              size="xl"
              class="w-full shadow-glow-primary"
              onclick="startDownload()"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
              Download Jenny Mod MCPE
            </Button>
            
            <!-- Security Badge -->
            <div class="flex items-center justify-center space-x-2 text-sm text-green-400">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Virus Scanned & Safe Download</span>
            </div>
          </div>
        </Card>
      </div>
    </section>

    <!-- Installation Guide -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            Installation Guide
          </h2>
          <p class="text-lg text-base-content/80">
            Follow these simple steps to install Jenny Mod on your MCPE/Bedrock device
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <Card variant="glass" class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-black font-bold">1</div>
              <h3 class="text-lg font-semibold">Download the Mod</h3>
            </div>
            <p class="text-base-content/80">
              Click the download button above to get the Jenny Mod MCPE file (.mcpack or .zip format).
            </p>
          </Card>
          
          <Card variant="glass" class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-black font-bold">2</div>
              <h3 class="text-lg font-semibold">Open with Minecraft</h3>
            </div>
            <p class="text-base-content/80">
              Tap the downloaded file and select "Open with Minecraft" to automatically import the mod.
            </p>
          </Card>
          
          <Card variant="glass" class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-black font-bold">3</div>
              <h3 class="text-lg font-semibold">Enable in World Settings</h3>
            </div>
            <p class="text-base-content/80">
              Create a new world or edit existing world settings to enable the Jenny Mod behavior pack.
            </p>
          </Card>
          
          <Card variant="glass" class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-black font-bold">4</div>
              <h3 class="text-lg font-semibold">Start Playing</h3>
            </div>
            <p class="text-base-content/80">
              Launch your world and enjoy Jenny Mod with all its features on your mobile device!
            </p>
          </Card>
        </div>
        
        <div class="text-center mt-12">
          <Button
            href="/how-to-install-jennymod"
            variant="outline"
            size="lg"
          >
            View Detailed Installation Guide
          </Button>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  function startDownload() {
    // Add your actual download logic here
    // For now, this is a placeholder
    alert('Download will start shortly. Please wait...');
    
    // Example: You could redirect to actual download URL
    // window.location.href = 'https://your-download-server.com/jenny-mod-mcpe.mcpack';
  }
</script>

<style>
  .shadow-glow-primary {
    box-shadow: 0 0 20px rgba(251, 191, 36, 0.5);
  }
</style>